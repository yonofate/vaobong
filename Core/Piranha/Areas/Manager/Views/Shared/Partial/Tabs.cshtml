@using Piranha.WebPages;
@{
    IList<Manager.MenuItem> items = null ;
    
    foreach (var group in Manager.Menu) {
        if (group.IsActive()) {
            items = group.ItemsForUser() ;
        }
    }
}
@if (items != null) {
<ul class="tabs">
    @foreach (var item in items) {
    <li><a@(item.IsActive() ? " class=selected" : "") href="@Url.Action(item.Action, item.Controller, new { @id = "" })">@item.Name</a></li>
    }
</ul>
<div class="clear"></div>
}