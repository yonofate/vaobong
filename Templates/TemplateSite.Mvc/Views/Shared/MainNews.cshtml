@model List<Piranha.Entities.Post>
    @{
        Layout = "";
    }
    <link href="~/Content/Css/out.css" rel="stylesheet" />
    @if (Model.Count > 0)
    {
        <div class="popularposts ">
            <ul>
                @foreach (var f in Model)
                {
                    <li>
                        <a title="@f.Title" href="@UI.Permalink(f.PermalinkId)">
                            @foreach (var att in f.Attachments)
                            {
                                @UI.Thumbnail(att, 150);
                            }
                        </a>
                        <a title="@f.Title" href="@UI.Permalink(f.PermalinkId)"><strong>@f.Title</strong></a><br />
                        <span>@f.Excerpt</span>
                    </li>
                    <div class="clear"></div>
                }
            </ul>
        </div>

        }
        else
        {
        <p>Hiện chưa có bài viết nào</p>
        }
